{
  "name": "iromi",
  "version": "0.0.1",
  "description": "Collection of Sass colour functions that handle the heavy lifting for selecting beautiful and accessible colours",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/corygibbons/iromi.git"
  },
  "author": "Cory Gibbons <hello@corygibbons.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/corygibbons/iro/issues"
  },
  "keywords": [
    "sass",
    "color",
    "colour",
    "typography"
  ],
  "devDependencies": {
    "browser-sync": "^2.18.6",
    "node-sass": "^4.3.0",
    "node-sass-json-importer": "^3.0.0",
    "onchange": "^3.2.1",
    "pug": "^2.0.0-beta9"
  },
  "scripts": {
    "build:pug": "pug testing/src -o testing/dest -O testing/src/tokens.json",
    "build:sass": "node-sass --importer node_modules/node-sass-json-importer/dist/node-sass-json-importer.js testing/src/index.scss testing/dest/index.css",
    "browsersync": "browser-sync start --server --files '**/*' --index 'testing/dest/index.html'"
  }
}
